float sphereSDF(float3 position)
{
    return length(position) - 1;
}

float3 repeat(float3 position, float3 repeat)
{
    //float3 cell = floor((abs(position)+0.5*repeat)/repeat);

    return fmod(abs(position+0.5*repeat), repeat)
	-0.5*repeat;
}

